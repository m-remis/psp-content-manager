{
  "name": "psp_cm",
  "version": "0.0.1",
  "description": "Cross-platform tool for psp filesystem manipulation",
  "main": "dist/main.js",
  "scripts": {
    "build": "echo \"Building TypeScript project...\" && tsc",
    "start": "npm run build && echo \"Starting Electron...\" && electron .",
    "package-win": "echo \"Packaging for Windows...\" && npm run build && electron-builder --win --x64",
    "purge": "echo \"Cleaning up...\" && rimraf release dist node_modules",
    "modclean": "modclean --run"
  },
  "build": {
    "appId": "com.github.m-remis.pspcm",
    "productName": "PSP_CM",
    "files": [
      "dist/**/*",
      "src/index.html",
      "src/styles.css",
      "assets/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.d.ts",
      "!**/*.spec.js",
      "!docs/**/*"
    ],
    "compression": "normal",
    "directories": {
      "output": "release/${os}",
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "asar": true,
      "icon": "assets/icon.ico",
      "artifactName": "PSP_CM-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "author": "https://github.com/m-remis",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "0.5.6",
    "@types/electron": "1.6.12",
    "@types/node": "22.8.6",
    "electron": "33.0.2",
    "electron-builder": "25.1.8",
    "modclean": "3.0.0-beta.1",
    "rimraf": "6.0.1",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "adm-zip": "0.5.16",
    "fs-extra": "11.2.0"
  }
}
